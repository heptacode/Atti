<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Activity.Activities.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-62dp"
        android:layout_marginTop="-62dp"
        android:layout_marginRight="-62dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wave_login" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nanumbarungothic"
        android:text="Travel Experience"
        android:textColor="#fff"
        android:textSize="32sp" />


    <EditText
        android:id="@+id/login_et_id"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/login_title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/login_edittext_background"
        android:elevation="2dp"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="Email"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/login_et_pw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/login_et_id"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/login_edittext_background"
        android:elevation="2dp"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="PW"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="17sp" />

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@id/login_title"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/login_title"
        android:background="@drawable/login_edittext_background"
        android:fontFamily="@font/nanumbarungothic"
        android:text="@string/login"
        android:textColor="@color/colorPrimary" />


    <Button
        android:id="@+id/login_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_et_pw"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/login_edittext_background"
        android:fontFamily="@font/nanumbarungothic"
        android:text="@string/Register"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

</RelativeLayout>